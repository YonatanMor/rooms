datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  firstName String
  lastName  String
  isAdmin   Boolean
}

model Event {
  id        String   @id @default(cuid())
  type      String
  title     String
  // time       Int
  // note       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
