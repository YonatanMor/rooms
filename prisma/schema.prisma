datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(cuid())
  email     String  @unique
  firstName String
  lastName  String
  isAdmin   Boolean
}

model Event {
  id        String   @id @default(cuid())
  type      String
  title     String
  hour      String
  classroom String
  duration  Int?
  note      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
